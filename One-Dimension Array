// By using direct method

public class One_D_Array {
    public static void main(String[]args){
    int[]arr = {1 , 2 , 3 , 4 , 5};
    System.out.println("One dimensional array elements are :\n");    
	   for(int i=0;i<arr.length;i++)  
	   {
		System.out.print(arr[i]+" ");    
	   }	
    }
}

// By using input method(Using scanner class)

import java.util.Scanner;
public class One_D_Array_2 {
    public static void main(String[]args){
    Scanner sc = new Scanner(System.in);
    System.out.println("Enter array length: "); // Array Length start from index 0
    int L = sc.nextInt();
    int[]arr = new int[L];
    System.out.println("Enter "+L+" element of an Array!!");
    for(int i=0; i<L; i++){
        arr[i]=sc.nextInt();
    }
    System.out.println("Array elements are: ");
    for(int i=0; i<L; i++){
        System.out.print(arr[i]+" "); // Print all the elements you have given
    }
    }
}
